datasource db {
      provider = "postgresql"
      url = env("DATABASE_URL")
}

generator client {
      provider = "prisma-client-js"
}

model User {
      id    Int   @id @default(autoincrement())
      fullname String @unique
      email String @unique
      locked Boolean
}

model Area {
      id    Int   @id @default(autoincrement())
      name  String
      permissions Permissions[]
}

model Permissions {
      id Int @id @default(autoincrement())
      name String

      areaId Int @unique
      area Area? @relation(fields: [areaId], references: [id])
}